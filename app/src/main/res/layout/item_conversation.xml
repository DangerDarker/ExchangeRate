<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <com.pkmmte.view.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/left_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/robot"
            app:border_color="#FFFFFF"
            app:border_width="2dp"
            app:shadow="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/left_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rect_shape_cyan"
            android:text="你好，我是聊天机器人！"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/left_profile_image"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        >


        <TextView
            android:id="@+id/right_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/rect_shape_lime"
            android:text="你好"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/right_profile_image"/>

        <com.pkmmte.view.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/right_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/xiamu01"
            app:border_color="#FFFFFF"
            app:border_width="2dp"
            app:shadow="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</LinearLayout>
